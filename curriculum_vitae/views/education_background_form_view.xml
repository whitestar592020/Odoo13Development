<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="form_education_background">
            <field name="name">form.education.background</field>
            <field name="model">education.background</field>
            <field name="arch" type="xml">
                <form string="Education Background">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Enter Education Name" required="True"/>
                            </h1>
                        </div>

                        <group>
                            <group string="Information">
                                <field name="country"/>
                                <field name="certification"/>
                            </group>
                            <group string="Period">
                                <field name="period_from"/>
                                <field name="period_to"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>