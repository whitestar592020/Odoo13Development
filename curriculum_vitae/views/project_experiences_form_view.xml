<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="form_project_experiences">
            <field name="name">form.project.experiences</field>
            <field name="model">project.experiences</field>
            <field name="arch" type="xml">
                <form string="Project Experiences">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Enter Project Name" required="True"/>
                            </h1>
                            <field name="position" placeholder="Enter Position" required="True"/>
                        </div>

                        <group>
                            <group string="Information">
                                <field name="responsibilities"/>
                                <field name="programming_languages"/>
                            </group>
                            <group string="Period">
                                <field name="period_from"/>
                                <field name="period_to"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>