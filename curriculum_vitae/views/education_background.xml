<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Action for education background model -->
        <record id="action_education_background" model="ir.actions.act_window">
            <field name="name">Education Background</field>
            <field name="res_model">education.background</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>Create your first education background!</p>
            </field>
        </record>

        <menuitem id="cv_information" name="CV Information"
                  parent="cv_form"
                  sequence="20"/>

        <menuitem id="education_background" name="Education Background"
                  parent="cv_information"
                  action="action_education_background"
                  sequence="10"/>
    </data>
</odoo>